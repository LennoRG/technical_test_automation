pipeline {
    agent any

    stages {
        stage('install'){
            steps {
                git branch: 'main', url: 'https://github.com/LennoRG/technical_test_automation.git'

                sh 'pip3 install --upgrade pip'
                sh 'pip3 --version'
                sh 'python3 -m venv environment'
                sh 'source environment/bin/activate'
                sh 'pip3 install -r requirements.txt'
                sh 'python3 -m pip install behave'
                sh 'behave --version'
            }
        }

        stage('test'){
            steps {
                sh 'behave -f allure_behave.formatter:AllureFormatter -o allure-results src/Feature/script_one.feature --tags=@ScriptOne'
            }
        }
    }
}