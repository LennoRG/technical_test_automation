pipeline {
    agent any

    stages {
        stage('Mostrar PATH'){
            steps {
                sh 'echo $PATH'
            }
        }

        stage('install'){
            steps {
                git branch: 'main', url: 'https://github.com/LennoRG/technical_test_automation.git'

                //sh 'pip3 install --upgrade pip'
                sh 'pip3 --version'
                
            }
        }

        stage('Install Dependencies') {
         steps {
            withPythonEnv('python3') {
                //sh 'python3 -m venv environment'
                sh 'pip3 install behave'
                sh 'pip3 install -r requirements.txt'
                sh 'behave --version'
            }
         }
      }

        stage('Test'){
            steps {
                withPythonEnv('python3') {
                    sh 'behave --version'
                    sh 'behave ./src/Feature/script_one.feature'
                }
            }
        }
    }
}